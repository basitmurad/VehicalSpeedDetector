<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminPermissionActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:contentDescription="@string/todo"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="8dp"
        android:layout_margin="4dp"
android:text="@string/stay_alert_ndrive_safe_nyour_safety_matters"
        android:textSize="24sp"
        android:textStyle="bold"
        android:lineSpacingExtra="3dp"
        android:fontFamily="sans-serif-condensed-medium"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="4dp"
        android:padding="8dp"

        android:text="@string/this_app_requires_admin_permission_to_ensure_functionality"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"

        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/passwordInput"
        android:layout_margin="16dp"
        android:autofillHints=""
        android:background="@drawable/editext_back"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"

        tools:ignore="LabelFor,RtlSymmetry,SpeakableTextPresentCheck,TextFields,TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/grantAdminButton"
        android:background="@drawable/editext_back"
        android:backgroundTint="#3F51B5"

        android:layout_margin="24dp"
        android:text="@string/set_passwood"

        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="SpeakableTextPresentCheck" />

</LinearLayout>
